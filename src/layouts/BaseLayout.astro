---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { getAlternateLanguageUrl } from '../i18n/langToggle';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'Contemporary art portfolio of a Paris-based painter', image = '/og-image.jpg' } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const alternateLangUrl = getAlternateLanguageUrl(Astro.url.pathname, lang);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <nav class="fixed top-0 w-full bg-white/90 backdrop-blur-sm z-50 border-b border-gray-100">
      <div class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a href={`/${lang === 'en' ? '' : lang}`} class="text-2xl font-serif font-bold">
            Kunga DEMPA TSANG
          </a>
          
          <div class="flex items-center gap-8">
            <div class="hidden md:flex gap-6">
              <a href={lang === 'en' ? '/' : '/fr'} class="hover:text-accent transition-colors">{t('nav.home')}</a>
              <a href={lang === 'en' ? '/gallery' : '/fr/gallery'} class="hover:text-accent transition-colors">{t('nav.gallery')}</a>
              <a href={lang === 'en' ? '/about' : '/fr/about'} class="hover:text-accent transition-colors">{t('nav.about')}</a>
              <a href={lang === 'en' ? '/contact' : '/fr/contact'} class="hover:text-accent transition-colors">{t('nav.contact')}</a>
              <a href={lang === 'en' ? '/blog' : '/fr/blog'} class="hover:text-accent transition-colors">{t('nav.blog')}</a>
            </div>
            
            <!-- Language Toggle -->
            <div class="flex gap-2">
              <a 
                href={alternateLangUrl}
                class="px-3 py-1 rounded-md hover:bg-gray-100 transition-colors text-sm font-medium"
              >
                {lang === 'en' ? 'FR' : 'EN'}
              </a>
            </div>
          </div>
        </div>
      </div>
    </nav>
    
    <main class="pt-20">
      <slot />
    </main>
    
    <footer class="bg-gray-50 border-t border-gray-100 mt-20">
      <div class="container mx-auto px-4 py-12">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <h3 class="font-serif text-xl font-bold mb-4">Kunga DEMPA TSANG</h3>
            <p class="text-gray-600">Contemporary art from Paris, France</p>
          </div>
          
          <div>
            <h4 class="font-semibold mb-4">Navigation</h4>
            <div class="flex flex-col gap-2">
              <a href={lang === 'en' ? '/' : '/fr'} class="text-gray-600 hover:text-accent transition-colors">{t('nav.home')}</a>
              <a href={lang === 'en' ? '/gallery' : '/fr/gallery'} class="text-gray-600 hover:text-accent transition-colors">{t('nav.gallery')}</a>
              <a href={lang === 'en' ? '/about' : '/fr/about'} class="text-gray-600 hover:text-accent transition-colors">{t('nav.about')}</a>
              <a href={lang === 'en' ? '/contact' : '/fr/contact'} class="text-gray-600 hover:text-accent transition-colors">{t('nav.contact')}</a>
            </div>
          </div>
          
          <div>
            <h4 class="font-semibold mb-4">{t('footer.follow')}</h4>
            <div class="flex gap-4">
              <a href="https://www.instagram.com/kunga.dempa/" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-accent transition-colors flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073z"/>
                  <path d="M12 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
                Instagram
              </a>
            </div>
          </div>
        </div>
        
        <div class="border-t border-gray-200 mt-8 pt-8 text-center text-gray-600 text-sm">
          <p>&copy; {new Date().getFullYear()} Kunga DEMPA TSANG. {t('footer.rights')}.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

