---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('fr');
---

<BaseLayout title="Paiement réussi">
  <section class="py-20 min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 max-w-2xl">
      <div class="bg-white rounded-lg shadow-md p-8 text-center">
        <div class="mb-6">
          <svg class="w-20 h-20 mx-auto text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        
        <h1 class="font-serif text-4xl font-bold mb-4 text-green-600">
          {t('success.title')}
        </h1>
        
        <p class="text-lg text-gray-600 mb-8">
          {t('success.message')}
        </p>
        
        <div class="bg-gray-50 rounded-lg p-6 mb-8">
          <p class="text-sm text-gray-500 mb-2">Détails de la commande</p>
          <div id="order-details" class="text-gray-700">
            <p>Chargement des informations de commande...</p>
          </div>
        </div>
        
        <div class="space-y-4">
          <a 
            href="/fr/gallery"
            class="inline-block bg-primary text-white px-8 py-3 rounded-md hover:bg-primary/90 transition-colors font-semibold"
          >
            {t('success.backToGallery')}
          </a>
          
          <p class="text-sm text-gray-500">
            Nous vous contacterons prochainement pour organiser la livraison.
          </p>
        </div>
      </div>
    </div>
  </section>
  
  <script>
    // Get payment ID from URL
    const urlParams = new URLSearchParams(window.location.search);
    const paymentId = urlParams.get('paymentId');
    
    if (paymentId) {
      // In a real implementation, you would fetch payment details
      // For now, just show a success message
      const orderDetails = document.getElementById('order-details');
      if (orderDetails) {
        orderDetails.innerHTML = `
          <p class="font-semibold">ID de paiement : ${paymentId}</p>
          <p class="text-sm mt-2">Consultez votre e-mail pour la facture et la confirmation.</p>
        `;
      }
    }
  </script>
</BaseLayout>
