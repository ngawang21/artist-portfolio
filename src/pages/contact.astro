---
import BaseLayout from '../layouts/BaseLayout.astro';
import { useTranslations } from '../i18n/utils';

const t = useTranslations('en');
---

<BaseLayout title="Contact - Artist Portfolio">
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="font-serif text-5xl md:text-6xl font-bold text-center mb-6">
          {t('contact.title')}
        </h1>
        <p class="text-center text-gray-600 text-lg mb-16 max-w-2xl mx-auto">
          Interested in purchasing artwork, commissioning a piece, or collaborating? I'd love to hear from you.
        </p>

        <div class="grid md:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div>
            <form 
              action="https://formspree.io/f/YOUR_FORM_ID" 
              method="POST"
              class="space-y-6"
            >
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                  {t('contact.name')}
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-accent focus:border-transparent transition-all"
                  placeholder="Your name"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  {t('contact.email')}
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-accent focus:border-transparent transition-all"
                  placeholder="your.email@example.com"
                />
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                  Subject
                </label>
                <input 
                  type="text" 
                  id="subject" 
                  name="subject" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-accent focus:border-transparent transition-all"
                  placeholder="What's this about?"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  {t('contact.message')}
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="6" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-accent focus:border-transparent transition-all resize-none"
                  placeholder="Tell me about your inquiry..."
                ></textarea>
              </div>

              <button 
                type="submit"
                class="w-full px-8 py-3 bg-primary text-white rounded-md hover:bg-gray-800 transition-colors font-medium"
              >
                {t('contact.send')}
              </button>
            </form>

            <p class="text-sm text-gray-500 mt-4">
              * To enable this form, replace <code class="bg-gray-100 px-2 py-1 rounded">YOUR_FORM_ID</code> with your Formspree form ID, or use Netlify Forms by adding <code class="bg-gray-100 px-2 py-1 rounded">data-netlify="true"</code> to the form tag.
            </p>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            <div>
              <h3 class="font-serif text-2xl font-bold mb-4">Studio Location</h3>
              <p class="text-gray-700 leading-relaxed">
                18th Arrondissement<br />
                Montmartre, Paris<br />
                France
              </p>
              <p class="text-gray-600 mt-2 text-sm">
                Studio visits by appointment only
              </p>
            </div>

            <div>
              <h3 class="font-serif text-2xl font-bold mb-4">Direct Contact</h3>
              <p class="text-gray-700">
                <strong>Email:</strong> <a href="mailto:dempatsang@gmail.com" class="text-accent hover:underline">dempatsang@gmail.com</a>
              </p>
              <p class="text-gray-700 mt-2">
                <strong>Phone:</strong> <a href="tel:+33123456789" class="text-accent hover:underline">+33 1 23 45 67 89</a>
              </p>
            </div>

            <div>
              <h3 class="font-serif text-2xl font-bold mb-4">Social Media</h3>
              <div class="flex flex-col gap-3">
                <a 
                  href="https://instagram.com/kunga.dempa" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 text-gray-700 hover:text-accent transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
